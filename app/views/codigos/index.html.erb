<%= render "menuCodigo" %>
<% if @codigos.length == 0 %>
	<div class="alert alert-danger">
  		<strong>Error!</strong> No se encontraron datos
	</div>
<% else %>
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<% @codigos.each do |codigo| %> 
					<div class="col-md-3" style="text-align:center;width:300px;height:150px;
											background-image:url('http://placehold.it/350x150&text=Codigo');
											ceel;margin: 0px 5px 5px 0px;" > 
						<h3><%= codigo.nombre %></h3>
						<p>
							<%= codigo.valor %>
							<%= codigo.descripcion %>
						</p>  
					</div>
				<% end %>
			</div>
		</div>
	</div> 
<% end %>


